<h1>New Post</h1>
<div>
<%= form_for @post, html: { class: 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', target: @post %>
  <div class='control-group'>
    <%= f.label :title, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :title, class: 'input-xxlarge' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :body, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_area :body, class: 'input-xxlarge', size: '10x10' %>
    </div>
  </div>
  <div class='form-actions'>
    <%= f.submit "Create Post", class: 'btn btn-success' %>
  </div>
<% end %>
</div>