<%= content_tag_for :li, post, class: 'row-fluid' do %>
  <span class='span9'>
    <%= link_to post.title, post %> 
  </span>
  <span class='span3'>
    <span class='pull-right'>
      <%= link_to "Edit", edit_post_path(post), class: 'btn btn-mini' %> 
      <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-mini btn-danger' %>
    </span>
  </span>
<% end %>
